%ul
  - @locations.each do |locations|
    %li
    = locations.name
    %br
    = locations.city
    = locations.state
    %br
    = link_to "View", location_path(locations), class: 'btn btn-info'
    = link_to "Edit", edit_location_path(locations), class: 'btn btn-warning'
    = link_to "Delete", location_path(locations), method: :delete, class: 'btn btn-danger'

=link_to "New Location", new_location_path, class: 'btn btn-success'
= link_to "Home", root_path, class: 'btn btn-success'